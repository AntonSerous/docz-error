{
  "compilerOptions": {
    "baseUrl": "/",
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts*"],
  "exclude": [
    "node_modules",
    "dist",
  ],
}
